@{
    ViewData["Title"] = "Tela de cadastro";
}
<div>
    <style>
        .container {
            max-width: 50vh;
            border-radius: 15px;
            background-color: black;
            display: grid;
            place-items: center;

        }

        body {
          
            font-family: Arial, Helvetica, sans-serif;
            background-image: linear-gradient(20deg, cyan, yellow);
        }

        input {
            border-radius: 15px;
            text-align: center;
            padding: 15px;
            border: none;
            outline: none;
            font-size: 15px;
        }

        h1 {
            font-size: 40px;
            color:white;
        }

        h2 {
            font-size: 15px
        }

        button {
            background-color: dodgerblue;
            border: none;
            padding: 15px;
            width: 80%;
            border-radius: 10px;
            color: white;
            font-size: 15px;
        }

            button:hover {
                background-color: deepskyblue;
                cursor: pointer;
            }
    </style>
    <div class="container">
        <br><br>
        <h1>Cadastro</h1>
        <br><br>
        <input type="text" placeholder="Nome de usuário">
        <br><br>
        <input type="text" placeholder="E-mail">
        <br><br>
        <input type="password" placeholder="Senha">
        <br><br>
        <button>Realizar Cadastro</button>
        <br><br>
        <a rule="button" asp-controller="Home" asp-action="Login">Voltar</a>
        <br><br>
    </div>
</div>
